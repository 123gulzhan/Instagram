@model Instagram.ViewModels.LoginViewModel

<h4>Вход в приложение</h4>
<form method="post" asp-controller="Accounts" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="LoginOrEmail"></label>
        <input asp-for="LoginOrEmail">
        <span asp-validation-for="LoginOrEmail"></span>
    </div>
        
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password">
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label>
        <input asp-for="RememberMe">
    </div>
    <div>
        <input type="submit" value="Войти">
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}